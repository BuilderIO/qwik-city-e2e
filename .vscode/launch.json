  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "build.client",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["build"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "dev",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["--mode", "ssr", "--port", "3000"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "serve.preview",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["preview", "--port", "3001"]
    }
  ]
}
